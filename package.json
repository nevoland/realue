{
  "name": "realue",
  "private": false,
  "version": "4.0.0-alpha.14",
  "type": "module",
  "main": "./dist/main.js",
  "exports": {
    "types": "./dist/main.d.ts",
    "import": "./dist/main.js"
  },
  "files": [
    "dist",
    "lib",
    "!lib/old",
    "!lib/**/*.test.ts?",
    "!src",
    "!src/old",
    "README.md",
    "doc/",
    "!doc/.nojekyll"
  ],
  "scripts": {
    "dev": "vite",
    "dev:test": "vitest",
    "build": "rm -rf dist/; tsc --project tsconfig.package.json;",
    "build:doc": "typedoc",
    "prepare": "npm run build",
    "preview": "vite preview",
    "format": "prettier --check \"{src,scripts}/**/*.[jt]s\"",
    "format:fix": "prettier --write \"{src,scripts}/**/*.[jt]s\"",
    "test": "vitest run && tsc && npm run format",
    "version:alpha": "npm version prerelease --preid=alpha",
    "version:beta": "npm version prerelease --preid=beta",
    "publish:next": "npm publish --tag=next",
    "release:alpha": "npm run version:alpha && git push origin --follow-tags && npm run publish:next",
    "release:beta": "npm run version:beta && git push origin --follow-tags && npm run publish:next"
  },
  "dependencies": {
    "@preact/signals": "^1.2.1",
    "@types/lodash-es": "^4.17.9",
    "is-promise": "^4.0.0",
    "lodash-es": "^4.17.21",
    "preact": "^10.18.1"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.5.0",
    "@types/node": "^20.8.0",
    "autoprefixer": "^10.4.16",
    "nanoid": "^5.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "tailwindcss": "^3.3.3",
    "typedoc": "^0.25.1",
    "typedoc-plugin-markdown": "^3.16.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-module-list": "^1.5.0",
    "vitest": "^0.34.6"
  }
}
