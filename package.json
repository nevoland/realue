{
  "name": "realue",
  "version": "0.8.0",
  "description": "Value management for React components.",
  "main": "lib/index.js",
  "module": "src/index.js",
  "scripts": {
    "start": "node scripts/server.js",
    "build": "parcel build --public-url ./ src/index.html",
    "build:watch": "parcel src/index.html --port ${npm_config_port:-1234}",
    "prepare": "babel --out-dir lib --ignore tests src",
    "test": "eslint src/ && prettier \"{src,scripts}/**/*.js\" --list-different && nyc --require esm ava --no-power-assert",
    "test:watch": "node --require esm node_modules/.bin/ava --no-power-assert --watch",
    "eslint": "eslint src/",
    "prettier": "prettier --write \"{src,scripts}/**/*.js\"",
    "prepush": "npm test"
  },
  "keywords": [
    "react",
    "value",
    "reuse",
    "polymorphism"
  ],
  "author": "David Bonnet <david@bonnet.cc>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/davidbonnet/realue.git"
  },
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "recompose": "^0.27.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chalk": "^2.4.0",
    "codecov": "^3.0.0",
    "connect": "^3.6.6",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.11.0",
    "esm": "^3.0.25",
    "husky": "^0.14.3",
    "lodash": "^4.17.10",
    "nyc": "^11.7.1",
    "parcel-bundler": "^1.7.1",
    "prettier": "^1.12.1",
    "react-devtools": "^3.2.1",
    "react-test-renderer": "^16.3.2",
    "serve-static": "^1.13.2",
    "standard-version": "^4.3.0"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true
  },
  "eslintConfig": {
    "plugins": [
      "import"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "prettier"
    ],
    "env": {
      "es6": true
    },
    "globals": {
      "console": true,
      "global": true,
      "module": true,
      "process": true,
      "require": true,
      "window": true,
      "__dirname": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      },
      "sourceType": "module"
    }
  },
  "ava": {
    "files": [
      "src/**/tests/*.js"
    ]
  },
  "nyc": {
    "exclude": [
      "src/**/tests/*.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "@std/esm": "auto",
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  }
}
