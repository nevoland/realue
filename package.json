{
  "name": "realue",
  "private": false,
  "version": "4.0.0-alpha.10",
  "type": "module",
  "main": "./dist/main.js",
  "exports": {
    "types": "./dist/main.d.ts",
    "import": "./dist/main.js"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc --project tsconfig.package.json",
    "prepare": "npm run build",
    "preview": "vite preview",
    "format": "prettier --check \"{src,scripts}/**/*.[jt]s\"",
    "format:fix": "prettier --write \"{src,scripts}/**/*.[jt]s\"",
    "test": "tsc && npm run format",
    "version:alpha": "npm version prerelease --preid=alpha",
    "version:beta": "npm version prerelease --preid=beta",
    "publish:next": "npm publish --tag=next",
    "release:alpha": "npm run version:alpha && git push origin --follow-tags && npm run publish:next",
    "release:beta": "npm run version:beta && git push origin --follow-tags && npm run publish:next"
  },
  "dependencies": {
    "@preact/signals": "^1.1.5",
    "@types/lodash-es": "^4.17.8",
    "is-promise": "^4.0.0",
    "lodash-es": "^4.17.21",
    "preact": "^10.16.0"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.5.0",
    "@types/node": "^20.4.2",
    "autoprefixer": "^10.4.14",
    "nanoid": "^4.0.2",
    "prettier": "^3.0.1",
    "prettier-plugin-tailwindcss": "^0.5.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.6",
    "vite": "^4.3.9",
    "vite-plugin-module-list": "^1.3.0"
  }
}
