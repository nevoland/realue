{
  "name": "realue",
  "version": "1.1.1",
  "description": "Value management for React components.",
  "main": "lib/index.js",
  "scripts": {
    "start": "node scripts/server.js",
    "build": "parcel build --public-url ./ src/index.html",
    "build:watch": "parcel src/index.html",
    "prepare": "babel --out-dir lib --ignore \"src/tests/**/*.js\",\"src/app/**/*.js\" src",
    "test": "eslint src/ && prettier \"{src,scripts}/**/*.js\" --list-different && nyc ava --no-power-assert",
    "test:watch": "ava --no-power-assert --watch",
    "eslint": "eslint src/",
    "prettier": "prettier --write \"{src,scripts}/**/*.js\"",
    "prepush": "npm test",
    "release": "standard-version",
    "deploy": "git push --follow-tags origin master && npm publish"
  },
  "keywords": [
    "react",
    "value",
    "reuse",
    "polymorphism"
  ],
  "author": "David Bonnet <david@bonnet.cc>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/davidbonnet/realue.git"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "recompose": "^0.30.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "ava": "^1.0.1",
    "chalk": "^2.4.1",
    "codecov": "^3.1.0",
    "connect": "^3.6.6",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "esm": "^3.0.84",
    "fast-glob": "2.2.4",
    "husky": "^1.1.2",
    "nyc": "^13.1.0",
    "parcel-bundler": "^1.11.0",
    "prettier": "^1.14.3",
    "react-devtools": "^3.4.2",
    "react-test-renderer": "^16.6.0",
    "serve-static": "^1.13.2",
    "standard-version": "^4.4.0"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true
  },
  "eslintConfig": {
    "plugins": [
      "import"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "prettier"
    ],
    "env": {
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 10,
      "sourceType": "module"
    },
    "globals": {
      "console": true,
      "global": true,
      "module": true,
      "process": true,
      "require": true,
      "window": true,
      "__dirname": true
    }
  },
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "files": [
      "src/**/tests/*.js"
    ],
    "require": [
      "esm"
    ]
  },
  "browserslist": [
    ">0.5%",
    "not dead"
  ],
  "nyc": {
    "exclude": [
      "src/**/tests/*.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "esm": "auto"
}
